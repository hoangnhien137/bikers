{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}

<div id="login-form">
	<form action="{{ path("fos_user_security_check") }}" method="post">
		<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
		<div class="input username"><input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="User name" /></div>
		<div class="input password"><input type="password" id="password" name="_password" required="required" placeholder="Password" /></div>
		<button>Log in</button>
	</form>		
</div>
		
